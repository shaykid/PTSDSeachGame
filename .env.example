SCREEN_SIZE={"width":2,"height":6,"view":"portrait"}
PORT=3770
DISPLAY_HISTORY_IMAGES=TRUE
WAIT_START=18
BUTTON_WAIT=20
REACT_APP_SIGNALING_PORT=3701
SIGNALING_PORT = 3700
REACT_APP_SIGNALING_URL=
# CONTROL: keys | touch | both (default: both)
# - keys: Only keyboard controls, no touch buttons displayed
# - touch: Touch-to-move only, no on-screen buttons. Tap screen to move player toward that point
# - both: Both keyboard and touch controls available, buttons blink when simulated
CONTROL=both
# DISPLAY_TOUCH: none | personal | both (default: personal)
# - none: No touch indicators shown
# - personal: Shows fading fingerprint where user touches (default)
# - both: Shows both players' touch points (different colors)
DISPLAY_TOUCH=personal
# DISPLAY_BORDER: true | false (default: true)
# - Show red dashed lines indicating border detection zones for debugging
REACT_APP_DISPLAY_BORDER=true
# DEBUG_LOCATION: true | false (default: true)
# - Show ball coordinates and border threshold values on screen
REACT_APP_DEBUG_LOCATION=true
